root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{vue,js,scss}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[public/generator/templates/Laravel/**.stub]
indent_size = 4
[public/generator/templates/Vuejs/**.stub]
indent_size = 2

